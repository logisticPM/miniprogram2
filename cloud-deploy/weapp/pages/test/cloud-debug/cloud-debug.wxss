/* pages/test/cloud-debug/cloud-debug.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eaeaea;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #1aad19;
}

.config-section, .action-section, .results-section, .tips-section {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.config-item {
  display: flex;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.config-item:last-child {
  border-bottom: none;
}

.label {
  width: 220rpx;
  font-size: 26rpx;
  color: #666;
}

.value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.test-button {
  background-color: #1aad19;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.clear-button {
  background-color: #f8f8f8;
  color: #333;
  font-size: 28rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
}

.results-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 15rpx;
  border-left: 5rpx solid #ddd;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.result-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.result-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.success {
  background-color: #e8f5e9;
  color: #4caf50;
}

.error {
  background-color: #ffebee;
  color: #f44336;
}

.info {
  background-color: #e3f2fd;
  color: #2196f3;
}

.result-details {
  font-size: 24rpx;
  color: #666;
  white-space: pre-wrap;
  word-break: break-all;
}

.tip-item {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.tip-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.tip-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.tip-content {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}
